<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>error
    <p><% @book.errors.full_messages.each do |message| %></p>
      <p><%= message %></p>
    <% end %>
<% end %>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <p><%= f.submit 'Update Book' %></p>
<% end %>

<%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", "/books" %>