<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <th><%= book.本のタイトル %></th>
        <th><%= book.感想 %></th>
        <th><%= link_to "show", book_path(book.id) %></th>
      </tr>
    <% end %>
  </tbody>
</table>


<h2>New book</h2>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :本のタイトル %>

  <h4>Body</h4>
  <%= f.text_area :感想 %>

  <p><%= f.submit 'Create Book' %></p>
<% end %>